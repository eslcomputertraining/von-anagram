<h1 class="color">Word List | Click on the 'Command' key and 'F' to open the keyword search tool.</h1>
  <table class="table table">
    <thead>
      <th class="color">Text</th>
      <th class="color">Letters</th>  
      <th class="color">Edit</th> 
      <th class="color">Delete</th> 
    </thead>
    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.text %></td>
          <td><%= word.letters %></td>  
            <td>
               <a href="<%= "/words/#{word.id}/edit" %> ">
               Edit
                </a>
           </td>   
           <td>
            <form action="<%="/words/#{word.id}" %>" method="post">
              <input type="hidden" name="_method" value="delete"/>
              <button class="btn btn-danger" type="submit">
                Delete
              </button>
            </form>
          </td>   
        </tr>
      <% end %>
    </tbody>
  </table>
  
 
 